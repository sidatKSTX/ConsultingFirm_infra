{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ecr:GetAuthorizationToken",
                "ecr:DescribeRepositories",
                "ecr:ListRepositories"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "ecr:BatchCheckLayerAvailability",
                "ecr:BatchGetImage",
                "ecr:CompleteLayerUpload",
                "ecr:DescribeImages",
                "ecr:GetDownloadUrlForLayer",
                "ecr:GetRepositoryPolicy",
                "ecr:InitiateLayerUpload",
                "ecr:ListImages",
                "ecr:PutImage",
                "ecr:UploadLayerPart"
            ],
            "Resource": [
                "arn:aws:ecr:us-west-1:818140567777:repository/*",
                "arn:aws:ecr:us-east-1:818140567777:repository/*",
                "arn:aws:ecr:us-west-2:818140567777:repository/*",
                "arn:aws:ecr:eu-west-1:818140567777:repository/*",
                "arn:aws:ecr:ap-south-1:818140567777:repository/*"
            ]
        }
    ]
}
